<!doctype html>
<html>
<head>
	<title>Staff Locker Room</title>

	<% include headerLinks.ejs %>

	
</head>
<body>

	<% include staffNav.ejs %>


	<div class="col-sm-9">
		<div class="playerList" id="playerList">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Username</th>
						<th>First Name</th>
						<th>Last Name</th>
						<th>Birth Date</th>
						<th> </th>
					</tr>
				</thead>
				<tbody>

				<% for(var i=0; i<players.length; i++) {%>
					<tr> 
						<td>
							<div class="btn-group">
								<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="fa fa-user fa-fw"></span>
							    <%= players[i].username %> <span class="caret"></span>
								</button>
								<ul class="dropdown-menu" role="menu">
								<li><a href="editplayer/<%= players[i].userId %>" ><i class="fa fa-pencil fa-fw"></i> Edit</a></li>
								<li><a href=""><i class="fa fa-trash-o fa-fw"></i> Delete</a></li>
								</ul>
							</div>						
						</td>
						<td><%= players[i].firstname %></td>
						<td><%= players[i].lastname %></td>
						<td><%= formatDateForHuman(players[i].birthdate) %></td>

					</tr>
				<%}%>


				</tbody>
			</table>
		</div>
	</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="http://netdna.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
</body>

</html>