<!doctype html>
<html>
<head>
	<title>Staff Locker Room</title>

	<% include headerLinks.ejs %>

	
</head>
<body>

	<% include staffNav.ejs %>


	<div class="col-sm-12">

	<form class="form-horizontal" id="addTeam" action="/staff/createteam" method="post">

		<div class="form-group">	
			<label class="control-label col-sm-3" for="teamName">Team Name</label>
			<div class="col-sm-8">
				<input class="form-control inputForm" type="text" name="teamName">
			</div>
		</div>

		<div class="form-actions">
			<button type="submit" class="btn btn-success btn-large">Create Team</button>

		</div>

		<hr>

		<!-- List of currently available players -->
		<div class="col-sm-6" id="availablePlayers">
			<table class="table table-striped">
				<h4 class="text-center">Available Players</h4>
				<thead>
					<tr>
						<th> </th>
						<th>First Name</th>
						<th>Last Name</th>
					</tr>
				</thead>
				<tbody>

					<% for(var i=0; i<players.length; i++) {%>
					<tr id="availRow<%= players[i].userId %>">
						<td><a class="fa fa-plus-square" onclick="addPlayerToRoster('<%= players[i].userId %>')"></a></td>
						<td><%= players[i].firstname %></td>
						<td><%= players[i].lastname %></td>
					</tr>
					<% } %>

				</tbody>
			</table>

		</div>

		<!-- List of the current teams roster -->
		<div class="col-sm-6" id="currentTeamRoster">
			<table class="table table-striped">
				<h4 class="text-center">Teams Roster</h4>
				<thead>
					<tr>
						<th> </th>
						<th>First Name</th>
						<th>Last Name</th>
					</tr>
				</thead>
				<tbody>
				

				</tbody>
			</table>

		</div>



	</form>




	</div>
</body>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="/javascripts/global.js"></script>
</html>